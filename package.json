{
  "name": "ream",
  "version": "1.0.0-rc.6",
  "description": "unopinionated, universal Vue.js app made simple.",
  "repository": {
    "url": "ream/ream",
    "type": "git"
  },
  "main": "lib/index.js",
  "bin": "bin/cli.js",
  "files": [
    "lib",
    "app",
    "bin",
    "plugins"
  ],
  "scripts": {
    "test:cov": "BABEL_ENV=test jest --coverage && npm run lint",
    "test": "BABEL_ENV=test jest && npm run lint",
    "lint": "xo",
    "precommit": "npm t"
  },
  "author": "egoist <0x142857@gmail.com>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "devDependencies": {
    "eslint-config-rem": "^3.1.0",
    "husky": "^0.14.2",
    "jest-cli": "^20.0.4",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": "rem",
    "esnext": true,
    "envs": [
      "jest"
    ],
    "globals": [
      "jasmine"
    ],
    "ignores": [
      "examples/**/*",
      "app/**/*",
      "**/dist/**",
      "**/fixture/**/*"
    ],
    "rules": {
      "guard-for-in": 0,
      "import/no-dynamic-require": 0,
      "capitalized-comments": 0
    }
  },
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-load-config": "^1.0.0",
    "babel-loader": "^7.1.1",
    "babel-preset-vue-app": "^1.2.0",
    "chalk": "^2.0.1",
    "chokidar": "^1.7.0",
    "co": "^4.6.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "es6-promise": "^4.1.1",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "finalhandler": "^1.0.3",
    "fs-extra": "^3.0.1",
    "get-port": "^3.1.0",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^2.29.0",
    "http-proxy": "^1.16.2",
    "import-local-file": "^0.2.0",
    "internal-ip": "^2.0.0",
    "lru-cache": "^4.1.1",
    "memory-fs": "^0.4.1",
    "object-assign": "^4.1.1",
    "path-match": "^1.2.4",
    "path-to-regexp": "^1.7.0",
    "postcss-load-config": "^1.2.0",
    "postcss-loader": "^2.0.6",
    "rimraf": "^2.6.1",
    "serialize-javascript": "^1.3.0",
    "style-loader": "^0.18.2",
    "tildify": "^1.2.0",
    "update-notifier": "^2.2.0",
    "vue": "^2.3.4",
    "vue-loader": "^13.0.0",
    "vue-meta": "^1.0.4",
    "vue-router": "^2.7.0",
    "vue-server-renderer": "^2.3.4",
    "vue-template-compiler": "^2.3.4",
    "vuex": "^2.3.1",
    "vuex-router-sync": "^4.2.0",
    "webpack": "^2.5.0",
    "webpack-chain": "^3.3.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-handle-css-loader": "^1.2.0",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-node-externals": "^1.6.0",
    "yargs": "^8.0.2"
  },
  "peerDependencies": {},
  "babel": {
    "babelrc": false,
    "env": {
      "test": {
        "presets": [
          "vue-app"
        ]
      }
    }
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/ream",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  }
}
